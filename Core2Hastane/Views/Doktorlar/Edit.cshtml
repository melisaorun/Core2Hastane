@model Core2Hastane.model.Doktorlar

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h1>Edit</h1>

<h4>Doktorlar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DoktorId" />
            <div class="form-group">
                <label asp-for="DoktorAdSoyad" class="control-label"></label>
                <input asp-for="DoktorAdSoyad" class="form-control" />
                <span asp-validation-for="DoktorAdSoyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unvan" class="control-label"></label>
                <input asp-for="Unvan" class="form-control" />
                <span asp-validation-for="Unvan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RandevuId" class="control-label"></label>
                <select asp-for="RandevuId" class="form-control" asp-items="ViewBag.RandevuId"></select>
                <span asp-validation-for="RandevuId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>
